{
  "$schema": "https://json-schema.org/draft-07/schema",
  "$id": "https://github.com/roniemartinez/selectors/schema.json",
  "title": "Open Source Selectors",
  "markdownDescription": "Recipes",
  "type": "object",
  "properties": {
    "version": {
      "type": "integer"
    },
    "title": {
      "title": "Title",
      "type": "string"
    },
    "author": {
      "title": "Author",
      "type": "string"
    },
    "uuid": {
      "title": "Unique Identifier",
      "type": "string",
      "format": "uuid"
    },
    "description": {
      "title": "Description",
      "type": "string"
    },
    "selectors": {
      "title": "List of selectors",
      "type": "array",
      "items": {
        "$ref": "#/definitions/Selector",
        "properties": {
          "children": {
            "type": "array",
            "items": {
              "$ref": "#/definitions/Selector",
              "additionalProperties": false
            }
          }
        },
        "additionalProperties": false,
        "required": [
          "url"
        ]
      },
      "minItems": 1
    }
  },
  "additionalProperties": false,
  "required": [
    "author",
    "title",
    "uuid",
    "description",
    "version",
    "selectors"
  ],
  "definitions": {
    "SelectorType": {
      "type": "string",
      "enum": [
        "css",
        "xpath",
        "text",
        "re",
        "jsonpath",
        "jmespath"
      ]
    },
    "Selector": {
      "type": "object",
      "properties": {
        "selector": {
          "type": "string"
        },
        "type": {
          "$ref": "#/definitions/SelectorType"
        },
        "url": {
          "type": "string"
        },
        "uuid": {
          "type": "string",
          "format": "uuid"
        },
        "name": {
          "type": "string"
        },
        "extract": {
          "oneOf": [
            {
              "type": "object",
              "properties": {
                "attrib": {
                  "type": "string"
                }
              }
            },
            {
              "type": "string",
              "enum": [
                "outerHTML",
                "innerHTML",
                "innerText"
              ]
            }
          ]
        },
        "conditions": {
          "type": "array",
          "description": "Required conditions using OR operation.",
          "items": {
            "anyOf": [
              {
                "type": "object",
                "properties": {
                  "hasText": {
                    "type": "string"
                  },
                  "hasTexts": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  },
                  "hasAttribute": {
                    "type": "object",
                    "maxProperties": 1
                  },
                  "hasAttributes": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "maxProperties": 1
                    }
                  },
                  "hasChildren": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "selector": {
                          "type": "string"
                        },
                        "type": {
                          "$ref": "#/definitions/SelectorType"
                        }
                      }
                    }
                  }
                },
                "additionalProperties": false
              }
            ]
          }
        }
      },
      "required": [
        "selector",
        "type",
        "uuid",
        "name"
      ]
    }
  }
}
